{
  "name": "matrix-chat-support",
  "version": "1.0.0",
  "description": "Embeddable Matrix chat support widget for websites",
  "main": "dist/matrix-chat-widget.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:widget": "vite build --mode widget",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "serve": "node server/index.js",
    "start": "npm run serve",
    "start:pm2": "pm2 start server/index.js --name matrix-chat-widget",
    "stop:pm2": "pm2 stop matrix-chat-widget",
    "restart:pm2": "pm2 restart matrix-chat-widget",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:health": "curl -s http://localhost:3001/health",
    "test:config": "curl -s http://localhost:3001/api/config",
    "setup": "./scripts/setup.sh"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "matrix-js-sdk": "^32.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.8",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "matrix",
    "chat",
    "support",
    "embeddable",
    "widget",
    "synapse",
    "customer-support",
    "livechat"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/matrix-chat-support.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/matrix-chat-support/issues"
  },
  "homepage": "https://github.com/your-username/matrix-chat-support#readme"
}
